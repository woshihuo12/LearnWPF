<Window x:Class="mumu_animationwithtimer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="使用计时器的动画" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" x:Name="rectangle" Width="30" Height="100" Fill="Blue">
        </Rectangle>
        <Button x:Name="btn" Grid.Row="1" Width="100" Height="30" Click="Button_Click">
            开始动画
        </Button>
    </Grid>
</Window>
